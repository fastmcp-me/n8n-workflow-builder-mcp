{
  "nodeType": "@n8n/n8n-nodes-langchain.chainRetrievalQa",
  "displayName": "Question and Answer Chain",
  "description": "Answer questions about retrieved documents",
  "version": [
    1,
    1.1,
    1.2,
    1.3,
    1.4,
    1.5,
    1.6
  ],
  "properties": [
    {
      "name": "query",
      "displayName": "Query",
      "type": "string",
      "default": "={{ $json.input }}",
      "required": true
    },
    {
      "name": "text",
      "displayName": "Prompt (User Message)",
      "type": "string",
      "default": "",
      "placeholder": "e.g. Hello, how can you help me?",
      "required": true
    },
    {
      "name": "options",
      "displayName": "Options",
      "type": "collection",
      "default": {},
      "placeholder": "Add Option"
    }
  ],
  "credentialsConfig": [
    {
      "name": "query",
      "required": true
    },
    {
      "name": "text",
      "required": true
    }
  ]
}