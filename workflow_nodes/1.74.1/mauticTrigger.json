{
  "nodeType": "n8n-nodes-base.mauticTrigger",
  "displayName": "Mautic Trigger",
  "description": "Handle Mautic events via webhooks",
  "version": 1,
  "properties": [
    {
      "name": "authentication",
      "displayName": "Authentication",
      "type": "options",
      "default": null
    },
    {
      "name": "OAuth2",
      "default": null
    },
    {
      "name": "events",
      "displayName": "Event Names or IDs",
      "type": "multiOptions",
      "default": [],
      "description": "Choose from the list, or specify IDs using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "required": true
    },
    {
      "name": "eventsOrder",
      "displayName": "Events Order",
      "type": "options",
      "default": "ASC"
    },
    {
      "name": "DESC",
      "default": null
    }
  ],
  "credentialsConfig": [
    {
      "name": "mauticApi",
      "required": true
    },
    {
      "name": "default",
      "required": false
    },
    {
      "name": "authentication",
      "required": false
    },
    {
      "name": "events",
      "required": true
    }
  ]
}