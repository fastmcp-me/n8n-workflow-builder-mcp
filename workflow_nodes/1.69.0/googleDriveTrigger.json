{
  "nodeType": "n8n-nodes-base.googleDriveTrigger",
  "displayName": "Google Drive Trigger",
  "description": "Starts the workflow when Google Drive events occur",
  "version": 1,
  "properties": [
    {
      "name": "authentication",
      "displayName": "Credential Type",
      "type": "options",
      "default": "oAuth2",
      "options": [
        {
          "name": "OAuth2 (recommended)",
          "value": "oAuth2"
        },
        {
          "name": "Service Account",
          "value": "serviceAccount"
        }
      ]
    },
    {
      "name": "triggerOn",
      "displayName": "Trigger On",
      "type": "options",
      "default": "",
      "required": true,
      "options": [
        {
          "name": "Changes to a Specific File",
          "value": "specificFile"
        },
        {
          "name": "Changes Involving a Specific Folder",
          "value": "specificFolder"
        }
      ]
    },
    {
      "name": "fileToWatch",
      "displayName": "File",
      "type": "resourceLocator",
      "default": "{ mode: 'list', value: '' }",
      "placeholder": "Select a file...",
      "required": true,
      "displayOptions": {
        "show": {
          "triggerOn": [
            "specificFile"
          ]
        }
      }
    },
    {
      "name": "event",
      "displayName": "Watch For",
      "type": "options",
      "default": "fileUpdated",
      "description": "When to trigger this node",
      "required": true,
      "options": [
        {
          "name": "File Updated",
          "value": "fileUpdated"
        }
      ],
      "displayOptions": {
        "show": {
          "triggerOn": [
            "specificFile"
          ]
        }
      }
    },
    {
      "name": "folderToWatch",
      "displayName": "Folder",
      "type": "resourceLocator",
      "default": "{ mode: 'list', value: '' }",
      "placeholder": "Select a folder...",
      "required": true,
      "displayOptions": {
        "show": {
          "triggerOn": [
            "specificFolder"
          ]
        }
      }
    },
    {
      "name": "asas",
      "displayName": "Changes within subfolders won't trigger this node",
      "type": "notice",
      "default": "",
      "displayOptions": {
        "show": {
          "triggerOn": [
            "specificFolder"
          ]
        }
      }
    },
    {
      "name": "driveToWatch",
      "displayName": "Drive To Watch",
      "type": "options",
      "default": "root",
      "description": "The drive to monitor. Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>.",
      "required": true,
      "displayOptions": {
        "show": {
          "triggerOn": [
            "anyFileFolder"
          ]
        }
      }
    },
    {
      "name": "options",
      "displayName": "Options",
      "type": "collection",
      "default": {},
      "description": "Triggers only when the file is this type",
      "placeholder": "Add option",
      "displayOptions": {
        "show": {
          "event": [
            "fileCreated",
            "fileUpdated"
          ]
        }
      }
    }
  ],
  "credentialsConfig": [
    {
      "name": "googleApi",
      "required": true
    },
    {
      "name": "authentication",
      "required": false
    },
    {
      "name": "triggerOn",
      "required": true
    },
    {
      "name": "fileToWatch",
      "required": true
    },
    {
      "name": "id",
      "required": false
    },
    {
      "name": "event",
      "required": true
    },
    {
      "name": "folderToWatch",
      "required": true
    },
    {
      "name": "id",
      "required": false
    },
    {
      "name": "event",
      "required": true
    },
    {
      "name": "asas",
      "required": true
    },
    {
      "name": "options",
      "required": false
    }
  ],
  "io": {
    "inputs": [],
    "outputs": [],
    "outputNames": [],
    "hints": {}
  },
  "wiring": {
    "role": "generic",
    "requires": [],
    "optional": [],
    "consumedBy": [],
    "consumes": [],
    "produces": []
  }
}