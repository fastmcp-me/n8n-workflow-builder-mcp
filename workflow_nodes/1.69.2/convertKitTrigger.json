{
  "nodeType": "n8n-nodes-base.convertKitTrigger",
  "displayName": "ConvertKit Trigger",
  "description": "Handle ConvertKit events via webhooks",
  "version": 1,
  "properties": [
    {
      "name": "event",
      "displayName": "Event",
      "type": "options",
      "default": "",
      "description": "The events that can trigger the webhook and whether they are enabled",
      "required": true,
      "options": [
        {
          "name": "Form Subscribe",
          "value": "formSubscribe"
        },
        {
          "name": "Link Click",
          "value": "linkClick"
        },
        {
          "name": "Product Purchase",
          "value": "productPurchase"
        },
        {
          "name": "Purchase Created",
          "value": "purchaseCreate"
        },
        {
          "name": "Sequence Complete",
          "value": "courseComplete"
        },
        {
          "name": "Sequence Subscribe",
          "value": "courseSubscribe"
        },
        {
          "name": "Subscriber Activated",
          "value": "subscriberActivate"
        },
        {
          "name": "Subscriber Unsubscribe",
          "value": "subscriberUnsubscribe"
        },
        {
          "name": "Tag Add",
          "value": "tagAdd"
        },
        {
          "name": "Tag Remove",
          "value": "tagRemove"
        }
      ]
    },
    {
      "name": "formId",
      "displayName": "Form Name or ID",
      "type": "options",
      "default": "",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "required": true,
      "displayOptions": {
        "show": {
          "event": [
            "formSubscribe"
          ]
        }
      }
    },
    {
      "name": "courseId",
      "displayName": "Sequence Name or ID",
      "type": "options",
      "default": "",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "required": true,
      "displayOptions": {
        "show": {
          "event": [
            "courseSubscribe",
            "courseComplete"
          ]
        }
      }
    },
    {
      "name": "link",
      "displayName": "Initiating Link",
      "type": "string",
      "default": "",
      "description": "The URL of the initiating link",
      "required": true,
      "displayOptions": {
        "show": {
          "event": [
            "linkClick"
          ]
        }
      }
    },
    {
      "name": "productId",
      "displayName": "Product ID",
      "type": "string",
      "default": "",
      "required": true,
      "displayOptions": {
        "show": {
          "event": [
            "productPurchase"
          ]
        }
      }
    },
    {
      "name": "tagId",
      "displayName": "Tag Name or ID",
      "type": "options",
      "default": "",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "required": true,
      "displayOptions": {
        "show": {
          "event": [
            "tagAdd",
            "tagRemove"
          ]
        }
      }
    }
  ],
  "credentialsConfig": [
    {
      "name": "convertKitApi",
      "required": true
    },
    {
      "name": "default",
      "required": false
    },
    {
      "name": "event",
      "required": true
    },
    {
      "name": "formId",
      "required": true
    }
  ],
  "io": {
    "inputs": [],
    "outputs": [],
    "outputNames": [],
    "hints": {}
  },
  "wiring": {
    "role": "generic",
    "requires": [],
    "optional": [],
    "consumedBy": [],
    "consumes": [],
    "produces": []
  }
}